@model Recipe_Sharing_platform.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .delete-header {
        background-color: #dc3545;
        color: white;
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }

    .confirm-message {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .details-list dt {
        color: #dc3545;
        font-weight: bold;
    }

    .details-list dd {
        margin-left: 0;
        padding-left: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .back-link {
        margin-top: 10px;
        display: inline-block;
        color: #dc3545;
        text-decoration: none;
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1>Delete</h1>
    </div>
    <div class="confirm-message">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="details-list">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Ingredients)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Ingredients)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Instructions)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Instructions)
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div>
        <form asp-action="Delete" class="delete-form">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="back-link">Back to List</a>
        </form>
    </div>
</div>
